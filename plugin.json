{
  "id": "nodebb-plugin-custom-profile-fields-ok",
  "name": "Custom Profile Fields OK",
  "description": "Allows administrators to add custom fields to user profiles and users to fill them.",
  "url": "https://github.com/oknet8020/Custom-Profile-Fields-OK", // שנה לכתובת ה-Git שלך
  "library": "./library.js",
  "hooks": [
    { "hook": "static:app.load", "method": "init" },
    { "hook": "filter:admin.header.build", "method": "addAdminNavigation" },
    { "hook": "filter:user.account.edit.build", "method": "addFieldsToEdit" },
    { "hook": "filter:user.custom_fields", "method": "addFieldsToProfile" } // וו חדש שנגדיר
    { "hook": "filter:register.build", "method": "addFieldsToRegister" },     // <--- הוק חדש: הוספת שדות לטופס הרשמה
    { "hook": "filter:register.complete", "method": "saveRegistrationFields" }, // <--- הוק חדש: שמירת נתונים מהרשמה
    { "hook": "action:user.save", "method": "saveCustomFields" }               // <--- הוק קיים, וודא שגם הוא שם!
  ],
  "templates": "./templates",
  "acpScripts": [
      "./public/js/admin.js"
  ],
  "languages": "./languages",
  "defaultLang": "he"
}
